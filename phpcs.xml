<?xml version="1.0"?>
<ruleset name="10up PHPCS">
	<description>10up PHPCS extended.</description>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/volumes/*</exclude-pattern>
	<rule ref="10up-Default" >
		<include-pattern>src/main/php</include-pattern>
		<exclude-pattern>src/integration-test</exclude-pattern>
		<exclude-pattern>src/test</exclude-pattern>
		<exclude name="Generic.Commenting.DocComment.MissingShort"/>
		<exclude name="Squiz.Commenting.FunctionComment.MissingParamComment"/>
		<exclude name="PHPCompatibility.FunctionDeclarations.NewNullableTypes.typeDeclarationFound"/>
		<exclude name="PHPCompatibility.FunctionDeclarations.NewNullableTypes.returnTypeFound" />
		<exclude name="PHPCompatibility.FunctionDeclarations.NewReturnTypeDeclarations.voidFound" />
	</rule>
</ruleset>
